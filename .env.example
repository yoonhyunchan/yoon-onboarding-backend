# Backend-only .env for running the backend in Docker (minimal, local use)
# NOTE: replace placeholder secrets before using in any shared environment.

ENVIRONMENT=local

PROJECT_NAME="FullStack FastAPI Project"
STACK_NAME=full-stack-fastapi-project


# CORS origins
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:80,http://localhost:5173,http://localhost:8000"

# Security / admin user (change these for your local testing)
SECRET_KEY=secret
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=secret

# Postgres - when running Postgres as a Docker container in the same network,
# use the Postgres container name (e.g. fs-postgres) as POSTGRES_SERVER.
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=main_db
POSTGRES_USER=db_user
POSTGRES_PASSWORD=db_password

# Emails - leave empty if you don't want SMTP (no-op is enabled)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Sentry (optional)
SENTRY_DSN=

# Docker image names (optional)
DOCKER_IMAGE_BACKEND=backend